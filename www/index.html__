			  op: "LISTAPP",
			  idresidence: document.getElementById('cmboxresidence').value
			},
			function(data,status){
				$("#div_residence").html(data); 
			});		
		
            $("#wrapper").slideUp();
            $("#wrapper2").fadeIn();
        });

		$('#to-login').on("click", function() {
            $("#wrapper2").slideUp();
            $("#wrapper").fadeIn();
        });

	</script>
    
