    <script type="text/javascript">
        app.initialize();	
		function alertDismissed()
		{
		}
		
		$(document).ready(function(){
		  $("#btnenviar").click(function(){
			$.post("http://tempustecnologia.com/sulife/controller/exec.register.php",
			{
			  op: "LOGINAPP",
			  edtuser: document.getElementById('edtuser').value,
			  edtpassword: document.getElementById('edtpassword').value
			},
			function(data,status){
				var res = data.split("|");
				iduser = res[0];
				name = res[1];
				studentnumber = res[2];
				idresidence = res[3];
				surname = res[4];
				phonenumber = res[5];
				gender = res[6];
			
			
				if (data.trim()!='ERRO')
				{
					
					window.localStorage.setItem("iduser", iduser);
					window.localStorage.setItem("name",name);
					window.localStorage.setItem("studentnumber",studentnumber);
					window.localStorage.setItem("idresidence",idresidence);
					window.localStorage.setItem("surname",surname);
					window.localStorage.setItem("phonenumber",phonenumber);
					window.localStorage.setItem("gender",gender);
					window.location.href = 'index2.html';
				}
				else
				{
					navigator.notification.alert(
						'Não foi possível efetuar o login.',  // message
						alertDismissed,         // callback
						'Warning',            // title
						'OK'                  // buttonName
					);				
				}
			});
		  });
		  
		   $("#btnregister").click(function(){
			$.post("http://tempustecnologia.com/sulife/controller/exec.register.php",
			{
			  op: "IAPP",
			  edtname: document.getElementById('edtname').value,
			  edtsurname: document.getElementById('edtsurname').value,
			  edtstudentnumber: document.getElementById('edtstudentnumber').value,
			  edtphonenumber: document.getElementById('edtphonenumber').value,
			  cmboxresidence: document.getElementById('cmboxresidence').value,
			  edtpassword: document.getElementById('edtpassword2').value,
			  edtconfirmpassword: document.getElementById('edtconfirmpassword').value
			},
			function(data,status){
				if (data.trim()=='OK')
				{
					navigator.notification.alert(
						'Cadastrado com sucesso.',  // message
						alertDismissed,         // callback
						'Success',            // title
						'OK'                  // buttonName
					);	
					$("#wrapper2").slideUp();
					$("#wrapper").fadeIn();
				}
				else
				{
					navigator.notification.alert(
						'Não foi possível realizar o registro.',  // message
						alertDismissed,         // callback
						'Error',            // title
						'OK'                  // buttonName
					);	
				}
			});
		  });
		  
		});
		
		 
	
